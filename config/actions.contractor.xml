<?xml version="1.0" ?>

<content xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<action controller="Contractor" method="index">
		<route pattern="^\/contractor$"/>
		<authenticate redirect="/login" />
		<presenter class="Library\Twig\Presenter\Twig"/>

	</action>

	<action controller="Contractor" method="add">
		<route pattern="^\/contractor\/add$"/>
		<authenticate redirect="/login" />
		<presenter class="Library\Twig\Presenter\Twig"/>
	</action>

	<action controller="Contractor" method="edit">
		<route pattern="^\/contractor\/edit\/([0-9]+)$"/>
		<authenticate redirect="/login" />
		<presenter class="Library\Twig\Presenter\Twig"/>
		<argument storage="url" name="id" pattern="^\/contractor\/edit\/([0-9]+)$" mapper="Mapper\Contractor"/>
	</action>
	
</content>
